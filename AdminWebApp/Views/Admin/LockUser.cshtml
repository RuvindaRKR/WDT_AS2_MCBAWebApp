@model Customer

@{
    ViewData["Title"] = "Block";
}

<h1>Account Lock</h1>

<h3>Are you sure you want to Lock this Customer Account?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerID)
        </dd>
    </dl>
    
    <form asp-action="Lock">
        <input type="hidden" asp-for="CustomerID" />
        <input type="submit" value="Lock" class="btn btn-danger" /> |
        <a asp-action="CustomerTransactions">Back to Customers</a>
    </form>
</div>
