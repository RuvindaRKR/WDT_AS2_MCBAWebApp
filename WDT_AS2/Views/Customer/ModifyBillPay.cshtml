@model BillPay
@{
    ViewData["Title"] = "Modify_BillPay";
    var payeeName = ViewBag.PayeeName;
    var accList = ViewBag.AccList;
}

<h3>Modify Bill Pay</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillPayID" />
            <input type="hidden" asp-for="PayeeID" />
            <input type="hidden" asp-for="BillPayID" />
            <input type="hidden" asp-for="BillPayID" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDate" class="control-label"></label>
                <input asp-for="ScheduleDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <select id="Period" name="Period" class="form-control" required>
                    <option value="OnceOff">One-Off</option>
                    <option disabled>Monthly</option>
                    <option disabled>Quarterly</option>
                    <option disabled>Annually</option>
                </select>
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to My Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
